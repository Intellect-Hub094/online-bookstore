/* General Styles */
body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 20px;
    background-color: #f4f4f4; /* Light background */
    color: #333; /* Default text color */
}

/* Home Page Styles */
.home-header {
    background: url('header-bg.jpg') no-repeat center center/cover; /* Background image */
    height: 400px; /* Height of the header */
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.home-header h1 {
    font-size: 3em; /* Large heading size */
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Text shadow for readability */
}

.home-intro {
    padding: 30px;
    text-align: center;
}

.home-intro p {
    font-size: 1.2em; /* Intro paragraph font size */
    margin: 20px 0; /* Space above and below paragraphs */
}

/* About Page Styles */
.about-section {
    background-color: #ffffff; /* White background */
    padding: 50px; /* Padding around the section */
}

.about-section h2 {
    color: #2c3e50; /* Dark blue-gray for headings */
    text-align: center;
    margin-bottom: 30px; /* Space below headings */
}

.about-section img {
    max-width: 100%; /* Responsive images */
    height: auto; /* Maintain aspect ratio */
    border-radius: 10px; /* Rounded corners */
}

.about-section p {
    line-height: 1.6; /* Line height for better readability */
    margin-bottom: 20px; /* Space below paragraphs */
    font-size: 1.1em; /* Adjust font size */
}

/* Services Page Styles */
.services {
    display: flex;
    flex-wrap: wrap; /* Allow wrapping of service cards */
    justify-content: center; /* Center the service cards */
    gap: 20px; /* Space between cards */
    margin: 50px 0; /* Margin around the section */
}

.service-card {
    background-color: #fff; /* White background for cards */
    border: 1px solid #ddd; /* Light gray border */
    border-radius: 10px; /* Rounded corners */
    padding: 20px; /* Padding inside cards */
    width: 300px; /* Fixed width for cards */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    text-align: center; /* Center text in cards */
}

.service-card h3 {
    margin-bottom: 15px; /* Space below heading */
}

.service-card p {
    font-size: 0.9em; /* Smaller font size */
}

/* Footer Styles */
.footer {
    background-color: #2c3e50; /* Dark blue-gray background */
    color: white; /* White text color */
    text-align: center; /* Centered text */
    padding: 20px; /* Padding around footer */
}

.footer a {
    color: #3498db; /* Link color */
    text-decoration: none; /* Remove underline */
}

.footer a:hover {
    text-decoration: underline; /* Underline on hover */
}

.footer p {
    margin: 10px 0; /* Space above and below paragraphs */
}

/* Responsive Design */
@media (max-width: 600px) {
    body {
        padding: 10px; /* Less padding on smaller screens */
    }

    .home-header h1 {
        font-size: 2em; /* Smaller for mobile */
    }

    .services {
        flex-direction: column; /* Stack cards vertically */
        align-items: center; /* Center align */
    }

    .service-card {
        width: 90%; /* Full width for mobile */
    }

    h1, h2, p {
        font-size: 16px; /* Smaller font size for smaller screens */
    }
}